{% extends 'base.html.twig' %}

{% block title %}Comment {% endblock %}

{% block body %}
    <h1>Comment index</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>User_id</th>
            <th>Created_at</th>
            <th>Delated_at</th>
            <th>Modifier_at</th>
            <th>Body</th>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for comment in comments %}
            <tr>
                <td>{{ comment.id }}</td>
                <td>{{ comment.userId }}</td>
                <td>{{ comment.createdAt ? comment.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.delatedAt ? comment.delatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.modifierAt ? comment.modifierAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ comment.body }}</td>
                <td>
                    <a href="{{ path('comment_show', {'id': comment.id}) }}">show</a>
                    <a href="{{ path('comment_edit', {'id': comment.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('comment_new') }}">Create new</a>
{% endblock %}
